
<legend> New Articles</legend>
<div class="row">
    <form class="col s12" method="POST" action="/article">
        <div class="row">
            <div class="input-field col s4 m6" style="width: 19.333333%; margin-left: 43px;">
                <select class="icons" name ="category">
                    <option value="" disabled selected>Choose category</option>
                    <option value="1">Technology</option>
                    <option value="2">Daily Motivation</option>
                    <option value="3">Science</option>
                    <option value="4">Politics</option>
                    <option value="5">Art</option>
                    <option value="6">Fetish</option>
                    <option value="7">Music</option>
                    <option value="8">Fashion</option>
                    <option value="9">Animals</option>
                    <option value="10">Cook</option>
                </select>
            </div>

            <div class="row">
                <div class="input-field col s5" style="clear:both">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Article Name</label>
                </div>
            </div>

            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s5" style="clear:both">
                            <i class="material-icons prefix">mode_edit</i>
                            <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                            <label for="icon_prefix2">Write your article</label>
                        </div>
                    </div>
                </form>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
            <button class="btn waves-effect waves-light" type="cancel" name="cancel" style="background-color: #c62828;">Cancel
                <i class="material-icons right">clear</i>
            </button>

        </div>
    </form>
</div>
